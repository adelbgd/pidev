{% extends 'base.html.twig' %}
{% block title%} Liste des categories{% endblock %}

{% block body %}
 {% if categories %}
    <table id="produits" class="table table-striped">
      <thead>
        <tr>
          <th>Nom_Categorie</th>
          
        </tr>
      </thead>
      <tbody>
        {% for categorie in categories %}
          <tr>
            <td>{{ categorie.nom }}</td>
            
           <td>
              
              <a href="/index/formmodif/{{ categorie.id }}" class="btn btn-dark">Modifier</a>
              <a href="/index/formsupp/{{ categorie.id }}" class="btn btn-danger" 
              onclick="return confirm('Etes-vous sÃ»r de supprimer cette categorie?');">Supprimer</a>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  {% else %}
    <p>Aucune categorie</p>
  {% endif %} 
{% endblock %}