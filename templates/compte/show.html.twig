{% extends 'base.html.twig' %}

{% block title %}Swappy {{compte.nom}} {% endblock %}

{% block body %}
 

   <!--

    {{ include('compte/_delete_form.html.twig') }}
    -->
  <div class="row py-5 px-4">
   <div class="col-md-5 mx-auto">
    <!-- Profile widget -->
     <div class="bg-white shadow rounded overflow-hidden">
      <div class="px-4 pt-0 pb-4 cover">
       <div class="media align-items-end profile-head"> 
       <div class="profile mr-3">
       <img src="http://localhost/img/{{compte.profileImage}}" alt="..." width="130" class="rounded mb-2 img-thumbnail">
      {% if compte.id == 1 %}
    <a href="{{ path('app_compte_edit', {'id': compte.id}) }}" class="btn btn-outline-dark btn-sm btn-block">Edit profile</a>
{% else %}
  {% if tablerelation|length > 0 %}
    <a href="{{ path('app_unfollow', {'id': compte.id}) }}" class="btn btn-outline-dark btn-sm btn-block">Unfollow</a>

  {% else %}
  <a href="{{ path('app_follow', {'id': compte.id}) }}" class="btn btn-outline-dark btn-sm btn-block">Follow</a>
  {% endif %}
{% endif %}
       </div> 
       <div class="media-body mb-5 text-white"> 
       <h4 class="mt-0 mb-0">{{compte.nom}}</h4>
        <p class="small mb-4"> <i class="fas fa-map-marker-alt mr-2"></i>tunis</p> 
        </div>
         </div> 
         </div>
          <div class="bg-light p-4 d-flex justify-content-end text-center"> 
          <ul class="list-inline mb-0"> 
          <li class="list-inline-item"> 
          <h5 class="font-weight-bold mb-0 d-block">{{compte.nbrProduitsPublies}}</h5>
          <small class="text-muted"> 
          <i class="fas fa-image mr-1"></i>
          Articles</small> </li>
           <li class="list-inline-item"> 
           <h5 class="font-weight-bold mb-0 d-block">{{compte.nbrFollowers}}</h5><small class="text-muted" id="Followers"> <i class="fas fa-user mr-1"></i>Followers</small> </li>
            <li class="list-inline-item"> <h5 class="font-weight-bold mb-0 d-block">{{compte.nbrFollowings}}</h5><small class="text-muted" id="Followings"> <i class="fas fa-user mr-1"></i>Followings</small> </li>
             </ul> 
             </div>
              <div class="px-4 py-3"> 
              <h5 class="mb-0">About</h5> 
              <div class="p-4 rounded shadow-sm bg-light">
               <p class="font-italic mb-0">{{compte.bio|raw}}</p>
                
                  </div> 
                  </div> 
                  <div class="py-4 px-4">
                   <div class="d-flex align-items-center justify-content-between mb-3">
                    <h5 class="mb-0" id="recent-photos">Recent photos</h5>
                    <a href="#" class="btn btn-link text-muted">Show all</a> </div>
                   <!--                    Followers row             -->
                   <div class="blog-author" id="followers-row"  style="display:none;">
                    {% for f in followers %}
                    {% if f.banned == 0%}
                     <div class="media align-items-center">
                     <img src="http://localhost/img/{{f.profileImage}}" alt="photo" width="60px" height="60px">
                     <div class="media-body" style="padding: 25px;">
                        <a href="{{ path('app_compte_show', {'id': f.id}) }}">
                           <h5>{{f.nom}}</h5>
                        </a>
                     </div>
                  </div>
                  {% endif %}
                  {% endfor %}
                  </div>
                  <!--                    Followings row             -->
                   <div class="blog-author" id="followings-row"  style="display:none;">
                    {% for f in followings %}
                    {% if f.banned == 0%}
                     <div class="media align-items-center">
                     <img src="http://localhost/img/{{f.profileImage}}" alt="photo" width="60px" height="60px">
                     <div class="media-body" style="padding: 25px;">
                        <a href="{{ path('app_compte_show', {'id': f.id}) }}">
                           <h5>{{f.nom}}</h5>
                        </a>
                     </div>
                  </div>
                  {% endif %}
                  {% endfor %}
                  </div>
                  <!--               Main Row              -->
                     <div class="row" id="row"> 
                     <div class="col-lg-6 mb-2 pr-lg-1">
                     <img src="https://images.unsplash.com/photo-1469594292607-7bd90f8d3ba4?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=750&q=80" alt="" class="img-fluid rounded shadow-sm"></div> 
                     <div class="col-lg-6 mb-2 pl-lg-1">
                     <img src="https://images.unsplash.com/photo-1493571716545-b559a19edd14?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=750&q=80" alt="" class="img-fluid rounded shadow-sm"></div> <div class="col-lg-6 pr-lg-1 mb-2"><img src="https://images.unsplash.com/photo-1453791052107-5c843da62d97?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80" alt="" class="img-fluid rounded shadow-sm"></div> 
                     <div class="col-lg-6 pl-lg-1">
                     <img src="https://images.unsplash.com/photo-1475724017904-b712052c192a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=750&q=80" alt="" class="img-fluid rounded shadow-sm"></div>
                      </div> 
                      </div>
                       </div>
                        </div>
                        
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
  $(document).ready(function() {
    // Hide the row when Followers is clicked
    $("#Followers").click(function() {
      $("#row").hide();
      $('#followers-row').show();
      $('#followings-row').hide();
      // Change the text of Recent Photos to Followers
      $("#recent-photos").text("Followers");
      
    });
  });
</script>
<script>
  $(document).ready(function() {
    // Hide the row when Followings is clicked 
    $("#Followings").click(function() {
      $("#row").hide();
      $('#followers-row').hide();
